<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Infomed</title>

    <!-- Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('/images/FundoAzul.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .page-container {
            background: #fff;
            max-width: 900px;
            margin: 30px auto;
            border-radius: 20px;
            padding: 25px 35px;
            box-shadow: 0px 4px 20px rgba(0,0,0,0.2);
            position: relative;
        }

        /* Ícones laterais */
        .icon-btn {
            position: absolute;
            top: 20px;
            background: #fff;
            border-radius: 12px;
            width: 45px;
            height: 45px;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            cursor: pointer;
        }

        .icon-left {
            left: -70px;
        }

        .icon-right {
            right: -70px;
        }

        /* Logo */
        .logo {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }

            .logo img {
                width: 180px;
            }

        /* Botão voltar */
        .btn-back {
            background: none;
            border: none;
            font-size: 26px;
            cursor: pointer;
            margin-bottom: 15px;
            color: #4db6ac;
        }

        /* Campo de busca */
        .search-box {
            display: flex;
            align-items: center;
            background: #e6f0f5;
            border-radius: 25px;
            padding: 8px 15px;
            margin-bottom: 20px;
        }

            .search-box i {
                font-size: 18px;
                color: #555;
                margin-right: 8px;
            }

            .search-box input {
                border: none;
                outline: none;
                flex: 1;
                background: transparent;
                font-size: 15px;
            }

        /* Especialidades */
        .especialidades {
            background: #e6f0f5;
            border-radius: 12px;
            padding: 15px;
        }

            .especialidades h3 {
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 15px;
                color: #333;
            }

        /* Grid fixo */
        .grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 12px;
        }

        @@media (max-width: 992px) {
            .grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @@media (max-width: 576px) {
            .grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .card {
            background: #fff;
            border-radius: 10px;
            padding: 18px 10px;
            text-align: center;
            font-size: 14px;
            color: #333;
            cursor: pointer;
            transition: all 0.2s;
            border: 1px solid rgba(0,0,0,0.06);
            min-height: 100px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 8px;
        }

            .card:hover {
                background: #4db6ac;
                color: #fff;
            }

            .card i,
            .card .fa-solid,
            .card .fa-regular,
            .card .fa-light {
                font-size: 24px;
                margin-bottom: 0;
                color: #4db6ac;
            }

            .card:hover i,
            .card:hover .fa-solid,
            .card:hover .fa-regular,
            .card:hover .fa-light {
                color: #fff;
            }

            .card span {
                display: block;
                line-height: 1.1;
                font-size: 13px;
                padding: 0 6px;
            }

        /* Nenhum resultado */
        #noResults {
            text-align: center;
            font-size: 14px;
            color: #666;
            margin-top: 15px;
            display: none;
        }

        /* Modal de médicos */
        .modal {
            display: none;
            position: fixed;
            z-index: 999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background: #fff;
            margin: 10% auto;
            padding: 20px;
            border-radius: 12px;
            width: 80%;
            max-width: 600px;
            position: relative;
        }

        .modal-close {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 22px;
            cursor: pointer;
            color: #333;
        }

        .medico-item {
            border-bottom: 1px solid #ddd;
            padding: 8px 0;
            font-size: 14px;
        }

            .medico-item:last-child {
                border-bottom: none;
            }
    </style>
</head>
<body>
    <div class="page-container" role="main" aria-labelledby="title-especialidades">
        <div class="icon-btn icon-left" title="Perfil" aria-hidden="true">
            <i class="bi bi-person-fill" style="font-size:22px;"></i>
        </div>
        <div class="icon-btn icon-right" title="Ajuda" aria-hidden="true">
            <i class="bi bi-question-lg" style="font-size:22px;"></i>
        </div>

        <div class="logo" role="img" aria-label="Logo Infomed">
            <img src="/images/Logoinfomed.png" alt="Infomed Logo" />
        </div>

        <button class="btn-back" aria-label="Voltar">
            <i class="bi bi-arrow-left" aria-hidden="true"></i>
        </button>

        <div class="search-box" role="search" aria-label="Pesquisar especialidade">
            <i class="bi bi-search" aria-hidden="true"></i>
            <input type="search" id="searchInput" placeholder="Pesquisar especialidade..." aria-label="Pesquisar especialidade" />
        </div>

        <section class="especialidades" role="region" aria-labelledby="title-especialidades">
            <h3 id="title-especialidades">@ViewData["Title"]</h3>

            <div class="grid" role="list" id="cardsContainer">
                <div class="card"><i class="fa-solid fa-tooth"></i><span>Odontologia</span></div>
                <div class="card"><i class="fa-solid fa-brain"></i><span>Neurologia</span></div>
                <div class="card"><i class="bi bi-heart-pulse"></i><span>Cardiologia</span></div>
                <div class="card"><i class="bi bi-gender-female"></i><span>Saúde da mulher</span></div>
                <div class="card"><i class="bi bi-person-bounding-box"></i><span>Dermatologia</span></div>
                <div class="card"><i class="bi bi-bandaid"></i><span>Ortopedia</span></div>
                <div class="card"><i class="bi bi-hospital"></i><span>Clínica geral</span></div>
                <div class="card"><i class="bi bi-people"></i><span>Medicina da família</span></div>
                <div class="card"><i class="bi bi-scissors"></i><span>Cirurgia geral</span></div>
                <div class="card"><i class="bi bi-eyedropper"></i><span>Endocrinologia</span></div>
                <div class="card"><i class="bi bi-cup-straw"></i><span>Gastroenterologia</span></div>
                <div class="card"><i class="bi bi-droplet-half"></i><span>Hematologia</span></div>
                <div class="card"><i class="bi bi-virus"></i><span>Infectologia</span></div>
                <div class="card"><i class="bi bi-droplet"></i><span>Nefrologia</span></div>
                <div class="card"><i class="bi bi-lungs"></i><span>Pneumologia</span></div>
                <div class="card"><i class="bi bi-emoji-smile"></i><span>Pediatria</span></div>
                <div class="card"><i class="bi bi-eyeglasses"></i><span>Oftalmologia</span></div>
                <div class="card"><i class="bi bi-moon-stars"></i><span>Psiquiatria</span></div>
            </div>

            <p id="noResults">Nenhuma especialidade encontrada.</p>
        </section>
    </div>

    <!-- Modal -->
    <div id="modalMedicos" class="modal" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
        <div class="modal-content">
            <span class="modal-close" aria-label="Fechar">&times;</span>
            <h4 id="modalTitle">Médicos - Especialidade</h4>
            <div id="medicosList"></div>
        </div>
    </div>

    <script>
        // Pesquisa das especialidades
        const searchInput = document.getElementById("searchInput");
        const cards = document.querySelectorAll("#cardsContainer .card");
        const noResults = document.getElementById("noResults");

        searchInput.addEventListener("input", function () {
            const filter = this.value.toLowerCase();
            let found = false;
            cards.forEach(card => {
                const text = card.innerText.toLowerCase();
                if (text.includes(filter)) {
                    card.style.display = "flex";
                    found = true;
                } else {
                    card.style.display = "none";
                }
            });
            noResults.style.display = found ? "none" : "block";
        });

        // Modal e API
        const modal = document.getElementById("modalMedicos");
        const modalTitle = document.getElementById("modalTitle");
        const medicosList = document.getElementById("medicosList");
        const closeModal = document.querySelector(".modal-close");

        closeModal.onclick = () => modal.style.display = "none";
        window.onclick = (event) => { if (event.target === modal) modal.style.display = "none"; }

        cards.forEach(card => {
            card.addEventListener("click", async () => {
                const especialidade = card.querySelector("span").innerText;
                modalTitle.innerText = `Médicos - ${especialidade}`;
                medicosList.innerHTML = "<p>Carregando...</p>";
                modal.style.display = "block";

                try {
                    const res = await fetch(`/api/medicos?especialidade=${encodeURIComponent(especialidade)}`);
                    if (res.ok) {
                        const data = await res.json();
                        if (data.length === 0) {
                            medicosList.innerHTML = "<p>Nenhum médico registrado para esta especialidade.</p>";
                        } else {
                            medicosList.innerHTML = "";
                            data.forEach(medico => {
                                const div = document.createElement("div");
                                div.classList.add("medico-item");
                                div.innerHTML = `<strong>${medico.nome}</strong> - CRM: ${medico.crm} <br/>
                                                         Tel: ${medico.telefone} | Email: ${medico.email}`;
                                medicosList.appendChild(div);
                            });
                        }
                    } else {
                        medicosList.innerHTML = "<p>Erro ao carregar médicos.</p>";
                    }
                } catch {
                    medicosList.innerHTML = "<p>Erro ao carregar médicos.</p>";
                }
            });
        });
    </script>
</body>
</html>
