@{
    ViewData["Title"] = "RH - Médicos";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Infomed</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('/images/FundoAzul.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .page-container {
            background: #fff;
            max-width: 900px;
            margin: 30px auto;
            border-radius: 20px;
            padding: 25px 35px;
            box-shadow: 0px 4px 20px rgba(0,0,0,0.2);
        }

        .btn-back {
            background: none;
            border: none;
            font-size: 26px;
            cursor: pointer;
            margin-bottom: 15px;
            color: #4db6ac;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-bottom: 15px;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            padding: 18px 12px;
            text-align: center;
            font-size: 14px;
            color: #333;
            border: 1px solid rgba(0,0,0,0.06);
            min-height: 140px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 8px;
            transition: all 0.2s;
            box-shadow: 0px 3px 8px rgba(0,0,0,0.05);
        }

            .card:hover {
                background: #4db6ac;
                color: #fff;
            }

            .card i {
                font-size: 30px;
                color: #4db6ac;
            }

            .card:hover i {
                color: #fff;
            }

        .no-results {
            text-align: center;
            font-size: 15px;
            color: #666;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <!-- Botão voltar -->
        <button class="btn-back" onclick="window.history.back()" aria-label="Voltar">
            <i class="bi bi-arrow-left"></i>
        </button>

        <h3 id="tituloEspecialidade">Médicos</h3>

        <div id="listaMedicos" class="grid"></div>
        <p id="msgErro" class="no-results" style="display:none;"></p>
    </div>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const especialidadeId = urlParams.get('especialidadeId');
        const especialidadeNome = urlParams.get('especialidadeNome');

        document.getElementById("tituloEspecialidade").innerText =
            "Médicos de " + (especialidadeNome ?? "");

        fetch(`/api/medicos?especialidadeId=${especialidadeId}`)
            .then(res => {
                if (!res.ok) throw new Error("Erro na API");
                return res.json();
            })
            .then(medicos => {
                const container = document.getElementById("listaMedicos");
                const msgErro = document.getElementById("msgErro");

                container.innerHTML = "";
                msgErro.style.display = "none";

                if (medicos.length === 0) {
                    msgErro.innerText = "Nenhum médico encontrado para esta especialidade.";
                    msgErro.style.display = "block";
                    return;
                }

                medicos.forEach(m => {
                    const div = document.createElement("div");
                    div.className = "card";
                    div.innerHTML = `
                                <i class="bi bi-person-circle"></i>
                                <strong>${m.nome}</strong>
                                <small><strong>CRM:</strong> ${m.crm}</small>
                                <small>${m.telefone}</small>
                            `;
                    container.appendChild(div);
                });
            })
            .catch(() => {
                document.getElementById("msgErro").innerText =
                    "Erro ao carregar médicos.";
                document.getElementById("msgErro").style.display = "block";
            });
    </script>
</body>
</html>
