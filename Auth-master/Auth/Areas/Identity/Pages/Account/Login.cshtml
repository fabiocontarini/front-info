@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Entrar";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Infomed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('/images/FundoAzul.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            background: #fff;
            width: 360px;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0px 4px 25px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

            .login-container img {
                width: 150px;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 18px;
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 12px 12px 12px 40px; /* espaço pro ícone */
            border-radius: 25px;
            border: none;
            background: #F1F1F1;
            font-size: 15px;
            box-sizing: border-box;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 5px rgba(67, 100, 247, 0.4);
            }

        .form-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 18px;
            color: #666;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: #4db6ac; /* azul principal da paleta */
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-login:hover {
                background: #4db6;
                /* tom mais escuro da paleta */
            }

        .extra-links {
            margin-top: 10px;
            font-size: 14px;
        }

            .extra-links a {
                text-decoration: none;
                color: #000;
            }

                .extra-links a:hover {
                    text-decoration: underline;
                }

        .register-link {
            margin-top: 20px;
            font-size: 14px;
        }

            .register-link a {
                text-decoration: none;
                font-weight: bold;
                color: #000;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="/images/Logoinfomed.png" alt="Infomed Logo" />

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <i class="bi bi-person-fill"></i>
                <input asp-for="Input.Email" class="form-control" placeholder="Login" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="bi bi-lock-fill"></i>
                <input asp-for="Input.Password" class="form-control" placeholder="Senha" type="password" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="extra-links">
                <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
            </div>

            <button id="login-submit" type="submit" class="btn-login">Entrar</button>

            <div class="register-link">
                <p>Não possui uma conta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">CADASTRE-SE</a></p>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
