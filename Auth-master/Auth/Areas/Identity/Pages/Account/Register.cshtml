@page
@model RegisterModel 

@{
    Layout = null;
    ViewData["Title"] = "Cadastro";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Infomed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('/images/FundoAzul.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
        }

        .register-container {
            background: #fff;
            width: 420px;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0px 4px 25px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

            .register-container img {
                width: 150px;
                margin-bottom: 15px;
            }

            .register-container h2 {
                font-size: 18px;
                margin: 10px 0 25px 0;
                font-weight: normal;
                color: #333;
            }

        .form-group {
            margin-bottom: 16px;
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 12px 12px 12px 40px; /* espaço pro ícone */
            border-radius: 25px;
            border: none;
            background: #F1F1F1;
            font-size: 15px;
            box-sizing: border-box;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 5px rgba(67, 100, 247, 0.4);
            }

        .form-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 18px;
            color: #666;
        }

        .btn-register {
            width: 100%;
            padding: 12px;
            background: #4db6ac;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-register:hover {
                background: #399187;
            }

        .extra-links {
            margin-top: 18px;
            font-size: 14px;
        }

            .extra-links a {
                text-decoration: none;
                font-weight: bold;
                color: #000;
            }

                .extra-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="register-container">
        <img src="/images/Logoinfomed.png" alt="Infomed Logo" />
        <h2>────────── Cadastro ──────────</h2>

        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <i class="bi bi-person-fill"></i>
                <input asp-for="Input.NomeCompleto" class="form-control" placeholder="Nome completo" />
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>

            <div class="form-group d-flex" style="gap:10px;">
                <div style="flex:1; position:relative;">
                    <i class="bi bi-telephone-fill"></i>
                    <input asp-for="Input.Telefone" class="form-control" placeholder="Telefone" />
                </div>
                <div style="flex:1; position:relative;">
                    <i class="bi bi-phone-fill"></i>
                    <input asp-for="Input.Celular" class="form-control" placeholder="Celular" />
                </div>
            </div>

            <div class="form-group">
                <i class="bi bi-envelope-fill"></i>
                <input asp-for="Input.Email" class="form-control" placeholder="E-MAIL" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="bi bi-person-badge-fill"></i>
                <input asp-for="Input.CPF" class="form-control" placeholder="CPF" />
                <span asp-validation-for="Input.CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="bi bi-lock-fill"></i>
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="bi bi-lock-fill"></i>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirmar senha" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="bi bi-geo-alt-fill"></i>
                <input asp-for="Input.CEP" class="form-control" placeholder="CEP" />
                <span asp-validation-for="Input.CEP" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn-register">Cadastrar-se</button>

            <div class="extra-links">
                <a asp-page="./Login">Voltar</a>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
