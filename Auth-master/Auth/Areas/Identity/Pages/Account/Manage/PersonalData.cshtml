@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Coloque o código CSS fornecido aqui */
    </style>
</head>
<body>
    <div class="container">
        <h3>@ViewData["Title"]</h3>

        <div class="row">
            <div class="col-md-6">
                <p>Sua conta contém dados pessoais que você nos forneceu. Esta página permite que você baixe ou exclua esses dados.</p>
                <p>
                    <strong>Excluir esses dados removerá permanentemente sua conta, e isso não pode ser recuperado.</strong>
                </p>
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="btn btn-primary" type="submit">Baixar</button>
                </form>
                <p>
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Excluir</a>
                </p>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
