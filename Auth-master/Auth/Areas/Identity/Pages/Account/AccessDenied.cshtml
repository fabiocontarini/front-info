@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acesso negado";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ffebcd; /* Cor de fundo suave como cor de pêssego */
            font-family: 'Arial', sans-serif;
            color: #3e3e3e;
            text-align: center;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Garantir que a altura mínima da página ocupe toda a tela */
            margin: 0;
        }

        header {
            background: linear-gradient(to right, #ff7f50, #ff6347); /* Gradiente de laranja para tomate */
            color: white;
            padding: 50px 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            flex: 1;
        }

        h1 {
            font-size: 3em;
            font-weight: bold;
            margin-bottom: 15px;
            color: #28a745; /* Cor verde para "ACESSO NEGADO" */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        p {
            font-size: 1.2em;
            font-weight: normal;
            margin-top: 10px;
        }

        .btn {
            background-color: #ff6347; /* Cor de tomate */
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 1.2em;
            border-radius: 5px;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #ff4500; /* Tom mais forte de laranja */
            }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1;
        }

        .fruit-theme {
            background-color: #fff; /* Cor de fundo clara para contraste */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 500px;
            margin: 20px;
            border: 2px solid #ff6347; /* Borda de tomate */
        }

            .fruit-theme h1 {
                color: #ff6347; /* Tomate */
            }

            .fruit-theme p {
                color: #2e8b57; /* Verde mais suave como de folha */
            }

        /* Rodapé fixo */
        footer {
            background-color: #ff6347; /* Cor de fundo do rodapé */
            color: white;
            padding: 10px 0;
            text-align: center;
            font-size: 0.9em;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
        }

            footer a {
                color: white;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="fruit-theme">
            <header>
                <h1>@ViewData["Title"]</h1>
                <p>Você não tem acesso a esse recurso.</p>
                <a href="/" class="btn">Voltar para a página inicial</a>
            </header>
        </div>
    </div>

</body>
</html>
